<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#ECE4E4"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"

            >

            <TextView
                android:id="@+id/hospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="পলাশবাড়ী চক্ষু হাসপাতাল"
                android:textColor="#000000"
                android:textSize="23sp"
                android:fontFamily="@font/bensenhandwriting"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/hospitalAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="পলাশবাড়ী, গাইবান্ধা"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:fontFamily="@font/bensenhandwriting"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/hospitalNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/amethysta"
                android:gravity="center"
                android:textColor="#000000"
                android:text="01714800876"
                android:textSize="15sp" />





        </LinearLayout>





        <ImageView
            android:id="@+id/callButtonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            />






    </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>